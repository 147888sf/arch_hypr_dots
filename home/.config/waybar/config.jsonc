{
    "layer": "top",
    "spacing": 0,
    "height": 48,

    "margin-top": 0,
    "margin-right": 12,
    "margin-bottom": 0,
    "margin-left": 12,

    "modules-left": [
        
    ],

    "modules-center": [
        "hyprland/workspaces"
    ],

    "modules-right": [
        "tray",
        "network",
        "custom/swaync",
        "pulseaudio",
        "clock"
    ],

    "hyprland/workspaces" : {
        "on-click": "activate",
        "all-outputs": true,
        "format": "{}",
        "persistent-workspaces": {
            "*": 1
        }
    },

    "tray": {
        "spacing": 10,
        "tooltip": false
    },
    
    "pulseaudio": {
        "scroll-step": 1,
        "max-volume": 150,
        "format": "󰕾  {volume}%",
        "format-bluetooth": "󰕾  {volume}%",
        "nospacing": 1,
        "on-click": "pavucontrol",
        "tooltip": false
    },
    
    "network": {
        "format-wifi": "󰖩",
        "format-ethernet": "󰈀",
        "format-disconnected": "󰖪",
        "interval": 1,
        "tooltip": false,
        "on-click": "nm-connection-editor"
    },

    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%d.%m.%Y}",
        "tooltip": false,
        "interval": 1
    },

    "custom/swaync": {
        "format": "",
        "on-click": "swaync-client -t",
        "tooltip": false,
        "on-click-right": "swaync-client -c -sw"
    }
}